<% title = 'Settings' %>
<%- include ../partials/navbar %>
<div class="container">
  <div class="row">
    <div class="col-xs-12 clearfix">
      <h1 class="margin-3 text-center"><%= __('Settings') %><span class="label label-danger to-right"><%= __('Under construction') %></span></h1>
    </div>
  </div>
    <div class="row">
      <div class="col-xs-offset-1">
          <h2><%= __('Unit') %></h2>
          <p class="lead"><%= __('Change unit to:') %></p>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-3 col-xs-offset-1">
          <div class="input-group">
            <span class="input-group-addon">
                <input type="radio" aria-label="metric" name="unit" value="metric"  <% if (settingsTable.selectedSystem === "metric")  { %> checked <% } %> onclick="changeSystem()">
            </span>
            <input type="text" class="form-control input-group-medium width-2" aria-label="metric" name="unit" value="<%= __('Metric') %>">
          </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-3 col-xs-offset-1">
        <div class="input-group">
              <span class="input-group-addon">
                  <input type="radio" aria-label="imperial" name="unit" value="imperial" <% if (settingsTable.selectedSystem === "imperial")  { %> checked <% } %> onclick="changeSystem()">
              </span>
          <input type="text" class="form-control input-group-medium width-2" aria-label="imperial" name="unit" value="<%= __('Imperial') %>">
        </div>
      </div>
    </div>


  <div class="row margin-top-3">
    <div class="col-xs-offset-1">
      <h2><%= __('Colour theme') %></h2>
      <p class="lead"><%= __('Change the colour theme to:') %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-5 col-xs-offset-1">
      <div class="input-group">
          <span class="input-group-addon">
              <input type="radio" aria-label="default" name="theme" value="default" <% if (settingsTable.selectedTheme === "default")  { %> checked <% } %> onclick="changeTheme()" disabled>
          </span>
        <input type="text" class="form-control input-group-medium width-4" aria-label="default" name="theme" value="<%= __('Default (wood, green, yellow)') %>">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-5 col-xs-offset-1">
      <div class="input-group">
                  <span class="input-group-addon">
                      <input type="radio" aria-label="plain" name="theme" value="plain" <% if (settingsTable.selectedTheme === "plain")  { %> checked <% } %> onclick="changeTheme()" disabled>
                  </span>
        <input type="text" class="form-control input-group-medium width-4" aria-label="plain" name="theme" value="<%= __('Plain (white, dark green, grey)') %>">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-5 col-xs-offset-1">
      <div class="input-group">
                  <span class="input-group-addon">
                      <input type="radio" aria-label="blue" name="theme" value="blue" <% if (settingsTable.selectedTheme === "blue")  { %> checked <% } %> onclick="changeTheme()" disabled>
                  </span>
        <input type="text" class="form-control input-group-medium width-4" aria-label="blue" name="theme" value="<%= __('Blue (white, blue, grey)') %>">
      </div>
    </div>
  </div>


  <div class="row margin-top-3">
    <div class="col-xs-offset-1">
      <h2><%= __('Language') %></h2>
      <p class="lead"><%= __('Change the language to:') %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-5 col-xs-offset-1">
      <div class="input-group">
                  <span class="input-group-addon">
                      <input type="radio" aria-label="german" name="language" value="german" <% if (settingsTable.selectedLang === "de")  { %> checked <% } %> disabled>
                  </span>
        <input type="text" class="form-control input-group-medium width-2" aria-label="german" name="language" value="Deutsch">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-5 col-xs-offset-1">
      <div class="input-group">
          <span class="input-group-addon">
              <input type="radio" aria-label="english" name="language" value="english" <% if (settingsTable.selectedLang === "en")  { %> checked <% } %> onclick="changeLanguage()">
          </span>
        <input type="text" class="form-control input-group-medium width-2" aria-label="english" name="language" value="English">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-5 col-xs-offset-1">
      <div class="input-group">
            <span class="input-group-addon">
                <input type="radio" aria-label="spanish" name="language" value="spanish" <% if (settingsTable.selectedLang === "es")  { %> checked <% } %> disabled> 
            </span>
        <input type="text" class="form-control input-group-medium width-2" aria-label="spanish" name="language" value="Español">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-5 col-xs-offset-1">
      <div class="input-group">
            <span class="input-group-addon">
                <input type="radio" aria-label="french" name="language" value="french" <% if (settingsTable.selectedLang === "fr")  { %> checked <% } %> onclick="changeLanguage()">
            </span>
        <input type="text" class="form-control input-group-medium width-2" aria-label="french" name="language" value="Français">
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-xs-5 col-xs-offset-1">
      <div class="input-group">
            <span class="input-group-addon">
                <input type="radio" aria-label="gaelic" name="language" value="gaelic" <% if (settingsTable.selectedLang === "gc")  { %> checked <% } %> disabled>
            </span>
        <input type="text" class="form-control input-group-medium width-2" aria-label="gaelic" name="language" value="Gàidhlig">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-5 col-xs-offset-1">
      <div class="input-group">
            <span class="input-group-addon">
                <input type="radio" aria-label="italian" name="language" value="italian" <% if (settingsTable.selectedLang === "it")  { %> checked <% } %> disabled>
            </span>
        <input type="text" class="form-control input-group-medium width-2" aria-label="italian" name="language" value="Italiano">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-5 col-xs-offset-1">
      <div class="input-group">
            <span class="input-group-addon">
                <input type="radio" aria-label="dutch" name="language" value="dutch" <% if (settingsTable.selectedLang === "ne")  { %> checked <% } %> disabled>
            </span>
        <input type="text" class="form-control input-group-medium width-2" aria-label="dutch" name="language" value="Nederlands">
      </div>
    </div>
  </div>

    <div class="row margin-bottom-2">
      <div class="col-xs-10 col-xs-offset-1">
        <p class="lead margin-3"><%= __('Selecting a language will happen here once we have more choices available for: Spanish, Italian, German, Dutch, and Gaelic.') %></p>
        <p class="lead"><%= __('For now, you can change the language from French to English from the top menu.') %></p>
      </div>
    </div>
</div>





