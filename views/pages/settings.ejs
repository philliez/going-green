<% title = 'Settings' %>
<%- include ../partials/navbar %>
<!-- for accessibility if a user is tabbing through and want to get to the content directly the main tab with id content is where the user would skip to -->
<main id="content">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 clearfix">
        <h1 class="margin-3 text-center"><%= __('Settings') %></h1>
        <p class="lead"><%= __("You can change the unit system, colour theme or the language. Please note that if your cookies are disabled, your changes won't work. ") %>
          <a href="cookies"><%= __("Learn more more about cookies.") %></a>
        </p>
      </div>
    </div>
      <div class="row">
        <div class="col-xs-offset-1">
            <h2><%= __('Unit') %></h2>
        </div>
      </div>
    <fieldset>
      <legend class="visuallyhidden">Unit system</legend>
      <div class="row">
        <div class="col-xs-3 col-xs-offset-1">
            <div class="input-group">
              <span class="input-group-addon">
                  <input type="radio" aria-label="metric" name="unit" value="metric"  <% if (settings.selectedUnit === "metric")  { %> checked <% } %> onclick="changeSystem()">
              </span>
              <input type="text" class="form-control input-group-medium width-2" aria-label="metric" name="unit" value="<%= __('Metric') %>">
            </div>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-3 col-xs-offset-1">
          <div class="input-group">
                <span class="input-group-addon">
                    <input type="radio" aria-label="imperial" name="unit" value="imperial" <% if (settings.selectedUnit === "imperial")  { %> checked <% } %> onclick="changeSystem()">
                </span>
            <input type="text" class="form-control input-group-medium width-2" aria-label="imperial" name="unit" value="<%= __('Imperial') %>">
          </div>
        </div>
      </div>
    </fieldset>

    <div class="row margin-top-3">
      <div class="col-xs-offset-1">
        <h2><%= __('Colour theme') %></h2>
      </div>
    </div>

    <fieldset>
      <legend class="visuallyhidden">Colour theme</legend>
      <div class="row">
        <div class="col-xs-5 col-xs-offset-1">
          <div class="input-group">
              <span class="input-group-addon">
                  <input type="radio" aria-label="default" name="theme" value="default" <% if (settings.selectedTheme === "default")  { %> checked <% } %> onclick="changeTheme('default')">
              </span>
            <input type="text" class="form-control input-group-medium width-4" aria-label="default" name="theme" value="<%= __('Default (wood, green, yellow)') %>">
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-5 col-xs-offset-1">
          <div class="input-group">
                      <span class="input-group-addon">
                          <input type="radio" aria-label="plain" name="theme" value="plain" <% if (settings.selectedTheme === "plain")  { %> checked <% } %> onclick="changeTheme('plain')">
                      </span>
            <input type="text" class="form-control input-group-medium width-4" aria-label="plain" name="theme" value="<%= __('Plain (white, dark green, grey)') %>">
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-5 col-xs-offset-1">
          <div class="input-group">
                      <span class="input-group-addon">
                          <input type="radio" aria-label="blue" name="theme" value="blue" <% if (settings.selectedTheme === "blue")  { %> checked <% } %> onclick="changeTheme('blue')">
                      </span>
            <input type="text" class="form-control input-group-medium width-4" aria-label="blue" name="theme" value="<%= __('Blue (white, blue, grey)') %>">
          </div>
        </div>
      </div>
    </fieldset>


    <div class="row margin-top-3">
      <div class="col-xs-offset-1">
        <h2><%= __('Language') %></h2>
      </div>
    </div>

  <fieldset>
    <legend class="visuallyhidden">Language</legend>
    <div class="row">
      <div class="col-xs-5 col-xs-offset-1">
        <div class="input-group">
                    <span class="input-group-addon">
                        <input type="radio" aria-label="german" name="language" value="german" <% if (settings.selectedLang === "de")  { %> checked <% } %> disabled>
                    </span>
          <input type="text" class="form-control input-group-medium width-2" aria-label="german" name="language" value="Deutsch">
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-5 col-xs-offset-1">
        <div class="input-group">
            <span class="input-group-addon">
                <input type="radio" aria-label="english" name="language" value="english" <% if (settings.selectedLang === "en")  { %> checked <% } %> onclick="changeLanguage()">
            </span>
          <input type="text" class="form-control input-group-medium width-2" aria-label="english" name="language" value="English">
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-5 col-xs-offset-1">
        <div class="input-group">
              <span class="input-group-addon">
                  <input type="radio" aria-label="spanish" name="language" value="spanish" <% if (settings.selectedLang === "es")  { %> checked <% } %> disabled> 
              </span>
          <input type="text" class="form-control input-group-medium width-2" aria-label="spanish" name="language" value="Español">
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-5 col-xs-offset-1">
        <div class="input-group">
              <span class="input-group-addon">
                  <input type="radio" aria-label="french" name="language" value="french" <% if (settings.selectedLang === "fr")  { %> checked <% } %> onclick="changeLanguage()">
              </span>
          <input type="text" class="form-control input-group-medium width-2" aria-label="french" name="language" value="Français">
        </div>
      </div>
    </div>


    <div class="row">
      <div class="col-xs-5 col-xs-offset-1">
        <div class="input-group">
              <span class="input-group-addon">
                  <input type="radio" aria-label="gaelic" name="language" value="gaelic" <% if (settings.selectedLang === "gc")  { %> checked <% } %> disabled>
                  
              </span>
              <input type="text" class="form-control input-group-medium width-2" aria-label="gaelic" name="language" value=" Gàidhlig">
              <!--img class="icon-flag" src="images/flag-saltire.jpg"-->
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-5 col-xs-offset-1">
        <div class="input-group">
              <span class="input-group-addon">
                  <input type="radio" aria-label="italian" name="language" value="italian" <% if (settings.selectedLang === "it")  { %> checked <% } %> disabled>
              </span>
          <input type="text" class="form-control input-group-medium width-2" aria-label="italian" name="language" value="Italiano">
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-5 col-xs-offset-1">
        <div class="input-group">
              <span class="input-group-addon">
                  <input type="radio" aria-label="dutch" name="language" value="dutch" <% if (settings.selectedLang === "ne")  { %> checked <% } %> disabled>
              </span>
          <input type="text" class="form-control input-group-medium width-2" aria-label="dutch" name="language" value="Nederlands">
        </div>
      </div>
    </div>
  </fieldset>

      <div class="row margin-bottom-2">
        <div class="col-xs-10 col-xs-offset-1">
          <p class="lead margin-3"><%= __('More choices will be available later: Spanish, Italian, German, Dutch, and Gaelic.') %></p>
          <p class="lead"><%= __('For now, you can change the language from French to English here or from the top menu.') %></p>
        </div>
      </div>
  </div>
</main>




