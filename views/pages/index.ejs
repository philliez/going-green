<% title = 'Home' %>
<%- include ../partials/banner %>


<div class="container">
    <div class="row">
        <div class="col-xs-12">
          <h1 class="margin-3 text-center">Home <small><em> (under construction)</em></small></h1>
        </div>
    </div>

    <div class="row">

        <div class="col-xs-9">

              <div class="panel panel-theme-color-inverted">
                    <div class="panel-heading " id="heading1">
                      <h2 class="panel-title">
                          <a data-toggle="collapse" role="button"  href="#collapse1" aria-expanded="false" aria-controls="collapse1">
                            <img src="images/icons/chicken-plain-green.png" class="icon-panel">
                            <span class="panel-theme-color-title">Raising chickens</span>
                            <span class="glyphicon glyphicon-triangle-bottom to-right big-glyph" id="triangle1"></span>
                          </a>
                      </h2>
                    </div>

                    <div id="collapse1" class="panel-collapse collapse" aria-labelledby="heading1" >
                      <div class="panel-body">
                        <div class="row col-xs-offset-1">

                          <form class="form-inline">
                            <div class="form-group">
                                <label for="number-of-hens">Number of hens: </label>
                                <a class="btn btn-default btn-md" href="#" role="button">
                                  <span class="glyphicon glyphicon-minus"></span>
                                </a>
                                <input type="number" class="form-control" name="number-of-hens" id="number-of-hens" placeholder="0">
                                <a class="btn btn-default btn-md" href="#" role="button">
                                  <span class="glyphicon glyphicon-plus"></span>
                                </a>
                                <a class="btn btn-danger btn-md" href="#" role="button">
                                  RESET
                                </a>
                            </div>
                          </form>
                        </div>

                        <div class="row col-xs-offset-1 margin-top-2">
                          <form class="form-horizontal">
                            <div class="form-group">
                                <label class="col-xs-3 control-label">Space to roam: </label>
                                <label class="col-xs-1 control-label"><%=typeof spaceToRoam == 'undefined' ? '0' : spaceToRoam %></label>
                                <label class="col-xs-3 control-label">square  meters</label>
                            </div>
                          </form>
                          <form class="form-horizontal">
                            <div class="form-group">
                              <label class="col-xs-3 control-label">Space for the coop: </label>
                              <label class="col-xs-1 control-label"><%=typeof spaceForCoop == 'undefined' ? '0' : spaceForCoop %></label>
                              <label class="col-xs-3 control-label">square  meters</label>
                            </div>
                          </form>
                          <form class="form-horizontal">
                            <div class="form-group">
                              <label class="col-xs-3 control-label">Total space needed: </label>
                              <label class="col-xs-1 control-label"><%=typeof totalSpace == 'undefined' ? '0' : totalSpace  %></label>
                              <label class="col-xs-3 control-label">square  meters</label>
                            </div>
                          </form>
                          <form class="form-horizontal margin-top-3">
                            <div class="form-group">
                              <label class="col-xs-3 control-label">Number of eggs</label>
                              <label class="col-xs-1 control-label"><%=typeof numberOfEggs == 'undefined' ? '0' : numberOfEggs %></label>
                              <label class="col-xs-3 control-label">(per week)</label>
                            </div>
                          </form>
                        </div>

                        <div class="row margin-2">
                          <div class="col-xs-offset-9">
                            <a class="btn button-primary btn-lg" href="#" role="button">Learn more >></a>
                          </div>
                        </div>

                      </div>
                    </div>
              </div>

          <div class="panel panel-theme-color-inverted">
            <div class="panel-heading" id="heading2">
              <h2 class="panel-title">
                <a data-toggle="collapse" role="button"  href="#collapse2" aria-expanded="false" aria-controls="collapse2">
                  <img src="images/icons/solar-panel-green.png" class="icon-panel">
                  <span class="panel-theme-color-title">Solar Panels</span>
                  <span class="glyphicon glyphicon-triangle-bottom to-right big-glyph" id="triangle2"></span>
                </a>
              </h2>
            </div>

            <div id="collapse2" class="panel-collapse collapse" aria-labelledby="heading2">
              <div class="panel-body">
                <div class="row col-xs-offset-1">

                    <div class="dropdown" style="">
                      <button class="btn btn-default dropdown-toggle dropdown-medium" type="button" id="dropdownSolar" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        Select a location
                        <span class="caret"></span>
                      </button>
                      <ul class="dropdown-menu dropdown-medium" aria-labelledby="dropdownSolar">
                        <li><a href="#">England</a></li>
                        <li><a href="#">Northern Ireland</a></li>
                        <li><a href="#">Scotland</a></li>
                        <li><a href="#">Wales</a></li>
                      </ul>
                    </div>


                </div>


              </div>
            </div>
          </div>


          <div class="panel panel-theme-color-inverted">
            <div class="panel-heading" id="heading3">
              <h2 class="panel-title">
                <a data-toggle="collapse" role="button"  href="#collapse3" aria-expanded="false" aria-controls="collapse3">
                  <img src="images/icons/tap-green.png" class="icon-panel">
                  <span class="panel-theme-color-title">Saving water</span>
                  <span class="glyphicon glyphicon-triangle-bottom to-right big-glyph" id="triangle3"></span>
                </a>
              </h2>
            </div>

            <div id="collapse3" class="panel-collapse collapse" aria-labelledby="heading3">
              <div class="panel-body">

                <div class="row col-xs-offset-1">
                  Thousands of litres of rain water can be collected per year, on an average roof in the UK.
                </div>

                <div class="row col-xs-offset-1 margin-top-2">
                  <form class="form-inline">
                    <div class="form-group">
                      <label for="number-of-person">Number of person in the household: </label>
                      <a class="btn btn-default btn-md" href="#" role="button">
                        <span class="glyphicon glyphicon-minus"></span>
                      </a>
                      <input type="number" class="form-control" name="number-of-hens" id="number-of-person" placeholder="1">
                      <a class="btn btn-default btn-md" href="#" role="button">
                        <span class="glyphicon glyphicon-plus"></span>
                      </a>
                    </div>
                  </form>
                </div>

                <div class="row col-xs-offset-1 margin-top-2">
                  <form class="form-horizontal">
                    <div class="form-group">
                      <label class="col-xs-1 control-label"><%=typeof numberOfLitres == 'undefined' ? '0' : numberOfLitres %></label>
                      <label class="col-xs-offset-1 control-label">litres of potable water per day could be saved by recycling grey water</label>
                    </div>
                  </form>
                </div>


                <div class="row margin-2">
                  <div class="col-xs-offset9">
                    <a class="btn btn-success btn-lg" href="#" role="button">Learn more >></a>
                  </div>
                </div>


              </div>
            </div>
          </div>



          <div class="panel panel-theme-color-inverted">
            <div class="panel-heading" id="heading4">
              <h2 class="panel-title">
                <a data-toggle="collapse" role="button"  href="#collapse4" aria-expanded="false" aria-controls="collapse4">
                  <img src="images/favicon-no-background.png" class="icon-panel">
                  <span class="panel-theme-color-title">Grown your own</span>
                  <span class="glyphicon glyphicon-triangle-bottom to-right big-glyph" id="triangle4"></span>
                </a>
              </h2>
            </div>

            <div id="collapse4" class="panel-collapse collapse" aria-labelledby="heading4">
              <div class="panel-body">
                <p>for grow your own here</p>
              </div>
            </div>
          </div>


          <div class="panel panel-theme-color-inverted">
            <div class="panel-heading" id="heading5">
              <h2 class="panel-title">
                <a data-toggle="collapse" role="button"  href="#collapse5" aria-expanded="false" aria-controls="collapse5">
                  <img src="images/icons/green-email-icon.png" class="icon-panel">
                  <span class="panel-theme-color-title">Email the results</span>
                  <span class="glyphicon glyphicon-triangle-bottom to-right big-glyph" id="triangle5"></span>
                </a>
              </h2>
            </div>

            <div id="collapse5" class="panel-collapse collapse" aria-labelledby="heading5">
              <div class="panel-body">
                <p>for email the results here</p>
              </div>
            </div>
          </div>


        </div>


        <div class="col-xs-3">
              <img src="images/4-green-changes.jpg" class="img-height-medium">
        </div>

  </div>

  <div class="row margin-3">
    <div class="col-xs-offset-4">
      <a class="btn btn-success btn-lg" href="about_EN" role="button">GO BACK</a>
    </div>
  </div>

</div>





