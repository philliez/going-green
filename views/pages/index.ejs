<% title = 'Home' %>
<%- include ../partials/navbar %>

<div class="container">
    <div class="row">
        <div class="col-xs-12 clearfix">
          <h1 class="margin-3 text-center"><%= __('Home') %> <span class="label label-danger to-right"><%= __('Under construction') %></span></h1>
        </div>
    </div>

    <div class="row">

        <div class="col-xs-12">

              <div class="panel panel-theme-color-inverted">
                    <div class="panel-heading clearfix" id="heading1">
                      <h2 class="panel-title">
                          <a data-toggle="collapse" role="button"  href="#collapse1" aria-expanded="false" aria-controls="collapse1">
                            <img src="images/icons/chicken-plain-green.png" class="icon-panel">
                            <span class="panel-theme-color-title"><%= __('Raising chickens') %></span>
                            <span class="glyphicon glyphicon-triangle-bottom to-right big-glyph" id="triangle1"></span>
                          </a>
                      </h2>
                    </div>

                    <div id="collapse1" class="panel-collapse collapse" aria-labelledby="heading1" >
                      <div class="panel-body">
                        <div class="row col-xs-offset-1">

                          <form class="form-inline">
                            <div class="form-group">
                              <label for="number-of-hens"><%= __('Number of hens:') %> </label>
                              <div class="input-group">
                                  <div class="input-group-btn">
                                    <button type="button" class="btn btn-default" aria-label="minus one" role="button"><span class="glyphicon glyphicon-minus"></span></button>
                                  </div>
                                  <input type="number" class="form-control width-1" name="number-of-hens" id="number-of-hens" aria-label="number of hens" placeholder="0">
                                  <div class="input-group-btn">
                                      <button type="button" class="btn btn-default" aria-label="plus one" role="button"><span class="glyphicon glyphicon-plus"></span></button>
                                      <button type="button" class="btn btn-danger" aria-label="reset" role="button"><%= __('RESET') %></button>
                                  </div>
                              </div>
                            </div>
                          </form>

                        </div>

                        <div class="row col-xs-offset-1 margin-top-2">
                          <form class="form-horizontal">
                            <div class="form-group">
                                <label class="col-xs-3 control-label"><%=  __('Space to roam:') %> </label>
                                <label class="col-xs-1 control-label"><%=typeof spaceToRoam == 'undefined' ? '0' : spaceToRoam %></label>
                                <% if (selectedSystem == 'metric') { %>
                                <label class="col-xs-3 control-label"><%=  __('square meters') %></label>
                                <% } else { %>
                                <label class="col-xs-3 control-label"><%=  __('square feet') %></label>
                                <% } %>
                            </div>
                          </form>
                          <form class="form-horizontal">
                            <div class="form-group">
                              <label class="col-xs-3 control-label"><%=  __('Space for the coop:') %> </label>
                              <label class="col-xs-1 control-label"><%=typeof spaceForCoop == 'undefined' ? '0' : spaceForCoop %></label>
                              <% if (selectedSystem == 'metric') { %>
                              <label class="col-xs-3 control-label"><%=  __('square meters') %></label>
                              <% } else { %>
                              <label class="col-xs-3 control-label"><%=  __('square feet') %></label>
                              <% } %>
                            </div>
                          </form>
                          <form class="form-horizontal">
                            <div class="form-group">
                              <label class="col-xs-3 control-label"><%=  __('Total space needed:') %> </label>
                              <label class="col-xs-1 control-label"><%=typeof totalSpace == 'undefined' ? '0' : totalSpace  %></label>
                              <% if (selectedSystem == 'metric') { %>
                              <label class="col-xs-3 control-label"><%=  __('square meters') %></label>
                              <% } else { %>
                              <label class="col-xs-3 control-label"><%=  __('square feet') %></label>
                              <% } %>
                            </div>
                          </form>
                          <form class="form-horizontal margin-top-3">
                            <div class="form-group">
                              <label class="col-xs-3 control-label"><%=  __('Number of eggs') %></label>
                              <label class="col-xs-1 control-label"><%=typeof numberOfEggs == 'undefined' ? '0' : numberOfEggs %></label>
                              <label class="col-xs-3 control-label">(<%=  __('per week') %>)</label>
                            </div>
                          </form>
                        </div>

                        <div class="row margin-2">
                          <div class="col-xs-offset-5">
                            <a class="btn button-primary btn-lg" href="#" role="button"><%=  __('Learn more') %> >></a>
                          </div>
                        </div>

                      </div>
                    </div>
              </div>

          <div class="panel panel-theme-color-inverted">
            <div class="panel-heading clearfix" id="heading2">
              <h2 class="panel-title">
                <a data-toggle="collapse" role="button"  href="#collapse2" aria-expanded="false" aria-controls="collapse2">
                  <img src="images/icons/solar-panel-green.png" class="icon-panel">
                  <span class="panel-theme-color-title"><%= __('Solar panels') %></span>
                  <span class="glyphicon glyphicon-triangle-bottom to-right big-glyph" id="triangle2"></span>
                </a>
              </h2>
            </div>

            <div id="collapse2" class="panel-collapse collapse" aria-labelledby="heading2">
              <div class="panel-body">
                <div class="row col-xs-offset-1">
                    <div class="row margin-bottom-2">
                        <h3><span class="label label-success "><%= __('Coming soon') %></span></h3>
                    </div>
                    <div class="row">
                        <div class="dropdown" style="">
                          <button class="btn btn-default dropdown-toggle dropdown-medium" type="button" id="dropdownSolar" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            <%=  __('Select a location') %>
                            <span class="caret"></span>
                          </button>
                          <ul class="dropdown-menu dropdown-medium" aria-labelledby="dropdownSolar">
                            <li><a href="#"><%=  __('England') %></a></li>
                            <li><a href="#"><%=  __('Northern Ireland') %></a></li>
                            <li><a href="#"><%=  __('Scotland') %></a></li>
                            <li><a href="#"><%=  __('Wales') %></a></li>
                          </ul>
                        </div>
                    </div>
                </div>
              </div>
            </div>
          </div>


          <div class="panel panel-theme-color-inverted">
            <div class="panel-heading clearfix" id="heading3">
              <h2 class="panel-title">
                <a data-toggle="collapse" role="button"  href="#collapse3" aria-expanded="false" aria-controls="collapse3">
                  <img src="images/icons/tap-green.png" class="icon-panel">
                  <span class="panel-theme-color-title"><%= __('Saving water') %></span>
                  <span class="glyphicon glyphicon-triangle-bottom to-right big-glyph" id="triangle3"></span>
                </a>
              </h2>
            </div>

            <div id="collapse3" class="panel-collapse collapse" aria-labelledby="heading3">
              <div class="panel-body">

                <div class="row col-xs-offset-1">
                  <%=  __('Thousands of litres of rain water can be collected per year, on an average roof in the UK.') %>
                </div>

                <div class="row col-xs-offset-1 margin-top-2">
                  <form class="form-inline">
                    <div class="form-group">
                      <label for="number-of-person"><%= __('Number of person in the household:') %> </label>
                      <div class="input-group">
                        <div class="input-group-btn">
                          <button type="button" class="btn btn-default" aria-label="minus one" role="button"><span class="glyphicon glyphicon-minus"></span></button>
                        </div>
                        <input type="number" class="form-control width-1" name="number-of-hens" id="number-of-person"  aria-label="number of person" placeholder="1">
                        <div class="input-group-btn">
                          <button type="button" class="btn btn-default" aria-label="plus one" role="button"><span class="glyphicon glyphicon-plus"></span></button>
                          <button type="button" class="btn btn-danger" aria-label="reset" role="button"><%= __('RESET') %></button>
                        </div>
                      </div>
                    </div>
                  </form>
                </div>

                <div class="row col-xs-offset-1 margin-top-2">
                  <form class="form-horizontal">
                    <div class="form-group">
                      <label class="col-xs-1 control-label"><%=typeof numberOfLitres == 'undefined' ? '0' : numberOfLitres %></label>
                      <label class="col-xs-offset-1 control-label" style="margin-left: 0;"><%= __('litres of potable water per day could be saved by recycling grey water') %></label>
                    </div>
                  </form>
                </div>


                <div class="row margin-2">
                  <div class="col-xs-offset-5">
                    <a class="btn btn-success btn-lg" href="#" role="button"><%=  __('Learn more') %> >></a>
                  </div>
                </div>


              </div>
            </div>
          </div>



          <div class="panel panel-theme-color-inverted">
            <div class="panel-heading clearfix" id="heading4">
              <h2 class="panel-title">
                <a data-toggle="collapse" role="button"  href="#collapse4" aria-expanded="false" aria-controls="collapse4">
                  <img src="images/favicon-no-background.png" class="icon-panel">
                  <span class="panel-theme-color-title"><%= __('Grow your own') %></span>
                  <span class="glyphicon glyphicon-triangle-bottom to-right big-glyph" id="triangle4"></span>
                </a>
              </h2>
            </div>

            <div id="collapse4" class="panel-collapse collapse" aria-labelledby="heading4">
              <div class="panel-body">
                <div class="row col-xs-offset-1">
                  <div class="row margin-bottom-2">
                    <h3><span class="label label-success "><%= __('Coming soon') %></span></h3>
                  </div>
                  <div class="row">
                    <p><%=  __('Various starter crops with advices') %></p>
                  </div>
                </div>
              </div>
            </div>
          </div>


          <div class="panel panel-theme-color-inverted">
            <div class="panel-heading clearfix" id="heading5">
              <h2 class="panel-title">
                <a data-toggle="collapse" role="button"  href="#collapse5" aria-expanded="false" aria-controls="collapse5">
                  <img src="images/icons/green-email-icon.png" class="icon-panel">
                  <span class="panel-theme-color-title"><%= __('Email the results') %></span>
                  <span class="glyphicon glyphicon-triangle-bottom to-right big-glyph" id="triangle5"></span>
                </a>
              </h2>
            </div>

            <div id="collapse5" class="panel-collapse collapse" aria-labelledby="heading5">
              <div class="panel-body">
                <div class="row col-xs-offset-1">
                  <div class="row margin-bottom-2">
                    <h3><span class="label label-success "><%= __('Coming soon') %></span></h3>
                  </div>
                  <div class="row">
                    <p><%=  __('To chose to receive an email with all the results from the various selections done on this page') %></p>
                  </div>
                </div>
              </div>
            </div>
          </div>

        </div>

  </div>

</div>





